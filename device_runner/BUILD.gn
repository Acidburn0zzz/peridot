import("//mojo/public/tools/bindings/mojom.gni")

group("all") {
  deps = [
    ":device_runner",
    ":device_runner_boot",
    ":dummy_device_shell",
  ]
}

executable("device_runner") {
  sources = [
    "device_runner.cc",
  ]

  deps = [
    ":interfaces",
    "//apps/modular/story_manager:interfaces",
    "//lib/ftl",
    "//mojo/public/c:system",
    "//mojo/public/cpp/application:standalone",
    "//mojo/public/cpp/bindings",
    "//mojo/system",
  ]
}

executable("device_runner_boot") {
  sources = [
    "device_runner_boot.cc",
  ]

  deps = [
    "//lib/ftl",
    "//lib/mtl",
    "//mojo/application_manager:application_manager_lib",
  ]
}

executable("dummy_device_shell") {
  sources = [
    "dummy_device_shell.cc",
  ]

  deps = [
    ":interfaces",
    "//lib/ftl",
    "//mojo/public/c:system",
    "//mojo/public/cpp/application:standalone",
    "//mojo/public/cpp/bindings",
    "//mojo/system",
  ]
}

mojom("interfaces") {
  sources = [
    "device_runner.mojom",
  ]
}
