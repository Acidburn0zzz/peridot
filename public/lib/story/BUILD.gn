import("//lib/fidl/fidl.gni")

# For consumption outside modular.
fidl("story") {
  sources = [
    "link.fidl",
    "module.fidl",
    "module_controller.fidl",
    "story.fidl",
  ]

  deps = [
    "//apps/ledger/services/public",
    "//apps/modular/services/application:service_provider",
    "//apps/modular/services/document_store",
    "//apps/mozart/services/views",
  ]
}

# Only for implementation of modular.
fidl("private") {
  sources = [
    "resolver.fidl",
    "story_runner.fidl",
    "story_storage.fidl",
  ]

  public_deps = [
    ":story",
  ]

  deps = [
    "//apps/modular/services/document_store",
    "//apps/mozart/services/views",
    "//apps/ledger/services/public",
    "//apps/ledger/services/internal",
  ]

  visibility = [
    "//apps/modular/*",
  ]
}
