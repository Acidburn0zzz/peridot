import("//lib/fidl/fidl.gni")

# For consumption outside modular.
fidl("public") {
  sources = [
    "link.fidl",
    "module.fidl",
    "story.fidl",
  ]

  deps = [
    "//apps/modular/services/document_store",
  ]
}

# Really only for implementation of modular.
fidl("story") {
  sources = [
    "module_controller.fidl",
    "resolver.fidl",
    "story_runner.fidl",
    "story_storage.fidl",
  ]

  public_deps = [
    ":public",
  ]

  deps = [
    "//apps/mozart/services/views",
    "//apps/modular/services/document_store",
  ]
}
