module maxwell;

import "lib/media/fidl/media_capturer.fidl";

[ServiceName="maxwell.SpeechToText"]
interface SpeechToText {
  BeginCapture(media.MediaCapturer media_capturer,
    TranscriptionListener transcription_listener);
};

// Represents an active transcription session. Either side may close this
// interface to indicate that transcription should stop.
interface TranscriptionListener {
  OnTranscriptUpdate(string spoken_text);
};
