module modular;

// An interface implemented by applications that wish to terminate gracefully.
[ServiceName="modular.Lifecycle"]
interface Lifecycle {
  // The client of this application has requested that this application
  // terminate gracefully.
  //
  // The application acknowledges that it is ready to terminate by closing this
  // interface. If the application does not acknowledge this request in a timely
  // manner, the client may forcibly terminate the application.
  Terminate();
};
