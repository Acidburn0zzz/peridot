group("counter_cpp") {
  deps = [
    ":example_module1",
    ":example_module2",
    ":example_recipe",
  ]
}

executable("example_module1") {
  sources = [
    "example_module1.cc",
  ]

  deps = [
    ":calculator",
    ":store",
    "//application/lib/app",
    "//apps/modular/lib/fidl:single_service_app",
    "//apps/modular/services/module",
    "//apps/modular/services/story",
    "//apps/mozart/lib/view_framework",
    "//apps/mozart/services/views",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
  ]
}

executable("example_module2") {
  sources = [
    "example_module2.cc",
  ]

  deps = [
    ":store",
    "//application/lib/app",
    "//apps/modular/lib/fidl:single_service_app",
    "//apps/modular/lib/rapidjson",
    "//apps/modular/services/module",
    "//apps/modular/services/story",
    "//apps/mozart/lib/view_framework",
    "//apps/mozart/services/views",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
  ]
}

executable("example_recipe") {
  sources = [
    "example_recipe.cc",
  ]

  deps = [
    ":calculator",
    "//apps/ledger/services/public",
    "//apps/modular/lib/fidl:array_to_string",
    "//apps/modular/lib/fidl:single_service_app",
    "//apps/modular/lib/rapidjson",
    "//apps/modular/services/component",
    "//apps/modular/services/module",
    "//apps/modular/services/story",
    "//apps/modular/services/user",
    "//apps/mozart/lib/view_framework",
    "//apps/mozart/services/views",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
  ]
}

source_set("store") {
  sources = [
    "store.cc",
  ]

  deps = [
    "//apps/modular/lib/rapidjson",
    "//apps/modular/services/module",
    "//apps/modular/services/story",
  ]
}

fidl("calculator") {
  sources = [
    "calculator.fidl",
  ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "store_unittest.cc",
  ]

  deps = [
    ":store",
    "//apps/modular/lib/rapidjson",
    "//apps/modular/lib/testing:mock_base",
    "//apps/modular/lib/testing:test_with_message_loop",
    "//apps/modular/services/story:story_cpp_sources",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
    "//third_party/gtest",
  ]
}
