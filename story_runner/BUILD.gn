group("all") {
  deps = [
    ":resolver",
    ":story_runner",
  ]
}

executable("story_runner") {
  sources = [
    "link.cc",
    "session.cc",
    "story_runner.cc",
  ]

  deps = [
    "//apps/modular/services/story",
    "//apps/mozart/services/views/interfaces",
    "//lib/ftl",
    "//apps/document_store/interfaces",
    "//apps/modular/document_editor",
    "//mojo/public/c:system",
    "//mojo/public/cpp/application:standalone",
    "//mojo/public/cpp/bindings",
    "//mojo/public/cpp/utility",
    "//mojo/public/interfaces/application:application_cpp_sources",
    "//mojo/system",
  ]
}

executable("resolver") {
  sources = [
    "resolver.cc",
  ]

  deps = [
    "//apps/modular/services/story",
    "//apps/document_store/interfaces",
    "//apps/modular/mojo:single_service_application",
    "//lib/ftl",
    "//mojo/public/cpp/application:standalone",
    "//mojo/public/cpp/bindings",
    "//mojo/public/interfaces/application:application_cpp_sources",
    "//mojo/system",
  ]
}
