group("context_link") {
  testonly = true

  deps = [
    ":context_link_module",
    ":context_link_user_shell",
  ]
}

executable("context_link_user_shell") {
  testonly = true

  sources = [
    "context_link_user_shell.cc",
  ]
  deps = [
    "//apps/maxwell/lib/context:formatting",
    "//apps/maxwell/services/context",
    "//apps/maxwell/services/suggestion",
    "//apps/modular/lib/fidl:array_to_string",
    "//apps/modular/lib/fidl:single_service_app",
    "//apps/modular/lib/rapidjson",
    "//apps/modular/lib/testing",
    "//apps/modular/lib/testing:component_base",
    "//apps/modular/services/user",
    "//garnet/public/lib/ui/views/fidl",
    "//apps/test_runner/services:test_runner",
    "//garnet/public/lib/fidl/cpp/bindings",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/mtl",
  ]
}

executable("context_link_module") {
  testonly = true

  sources = [
    "context_link_module.cc",
  ]
  deps = [
    "//apps/modular/lib/testing",
    "//apps/modular/lib/testing:component_base",
    "//apps/modular/services/module",
    "//apps/modular/services/story",
    "//garnet/public/lib/ui/views/fidl",
    "//garnet/public/lib/mtl",
  ]
}
