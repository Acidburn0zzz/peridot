group("all") {
  deps = [
    ":story-runner",
    ":story-runner-boot",
  ]
}

executable("story-runner") {
  sources = [
    "story-runner.cc",
  ]

  deps = [
    "//apps/modular/mojom_hack:interfaces",
    "//lib/ftl",
    "//mojo/public/c:system",
    "//mojo/public/cpp/application:standalone",
    "//mojo/public/cpp/bindings",
    "//mojo/public/cpp/utility",
    "//mojo/public/interfaces/application:application_cpp_sources",
    "//mojo/system",
  ]
}

executable("story-runner-boot") {
  sources = [
    "story-runner-boot.cc",
  ]

  deps = [
    "//apps/modular/mojom_hack:interfaces",
    "//lib/ftl",
    "//mojo/public/c:system",
    "//mojo/public/cpp/application:standalone",
    "//mojo/public/cpp/bindings",
    "//mojo/public/cpp/utility",
    "//mojo/public/interfaces/application:application_cpp_sources",
    "//mojo/system",
  ]
}
