import("//mojo/public/tools/bindings/mojom.gni")

group("all") {
  deps = [
    ":dummy_user_shell",
    ":story_manager",
  ]
}

executable("story_manager") {
  sources = [
    "story_manager.cc",
    "story_provider_state.cc",
    "story_provider_state.h",
    "story_state.cc",
    "story_state.h",
  ]

  deps = [
    ":interfaces",
    "//apps/ledger/api",
    "//apps/document_store/interfaces",
    "//apps/modular/mojo:single_service_application",
    "//apps/modular/story_runner:interfaces",
    "//apps/mozart/services/views/interfaces",
    "//lib/ftl",
    "//mojo/public/c:system",
    "//mojo/public/cpp/application:standalone",
    "//mojo/public/cpp/bindings",
    "//mojo/public/cpp/utility",
    "//mojo/public/interfaces/application:application_cpp_sources",
    "//mojo/system",
  ]
}

executable("dummy_user_shell") {
  sources = [
    "dummy_user_shell.cc",
  ]

  deps = [
    ":interfaces",
    "//apps/modular/mojo:single_service_view_app",
    "//apps/mozart/lib/view_framework",
    "//apps/mozart/services/views/interfaces",
    "//lib/ftl",
    "//mojo/public/c:system",
    "//mojo/public/cpp/application:standalone",
    "//mojo/public/cpp/bindings",
    "//mojo/system",
  ]
}

mojom("interfaces") {
  sources = [
    "story_manager.mojom",
  ]

  deps = [
    "//apps/ledger/api",
    "//apps/mozart/services/views/interfaces",
  ]
}
