import("//third_party/flatbuffers/flatbuffer.gni")

group("all") {
  deps = [
    ":dev_device_shell",
    ":device_runner",
    ":device_runner_monitor",
  ]
}

flatbuffer("users") {
  sources = [
    "users.fbs",
  ]
}

executable("device_runner") {
  sources = [
    "device_runner.cc",
  ]

  deps = [
    ":lib",
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/app/fidl",
    "//apps/modular/lib/fidl:app_client",
    "//apps/modular/lib/fidl:array_to_string",
    "//apps/modular/lib/fidl:scope",
    "//apps/modular/lib/ledger:constants",
    "//apps/modular/lib/util:filesystem",
    "//apps/modular/services/auth",
    "//apps/modular/services/config",
    "//apps/modular/services/device",
    "//apps/modular/services/user:private",
    "//garnet/public/lib/ui/presentation/fidl",
    "//garnet/public/lib/ui/views/fidl",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
    "//magenta/system/ulib/trace-provider",
  ]
}

source_set("lib") {
  sources = [
    "user_controller_impl.cc",
    "user_controller_impl.h",
    "user_provider_impl.cc",
    "user_provider_impl.h",
  ]

  deps = [
    ":users",
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/app/fidl",
    "//apps/modular/lib/fidl:app_client",
    "//apps/modular/lib/fidl:array_to_string",
    "//apps/modular/lib/fidl:scope",
    "//apps/modular/lib/util:filesystem",
    "//apps/modular/services/auth",
    "//apps/modular/services/config",
    "//apps/modular/services/device",
    "//apps/modular/services/user:private",
    "//garnet/public/lib/ui/presentation/fidl",
    "//garnet/public/lib/ui/views/fidl",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
    "//magenta/system/ulib/trace",
  ]
}

executable("device_runner_monitor") {
  sources = [
    "device_runner_monitor.cc",
  ]

  deps = [
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/app/fidl",
    "//apps/modular/services/device",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
  ]
}

executable("dev_device_shell") {
  sources = [
    "dev_device_shell.cc",
  ]

  deps = [
    "//apps/modular/lib/fidl:single_service_app",
    "//apps/modular/lib/testing",
    "//apps/modular/services/device",
    "//garnet/public/lib/ui/views/fidl",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
  ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "user_controller_impl_unittest.cc",
  ]

  deps = [
    ":lib",
    "//garnet/public/lib/app/cpp",
    "//apps/modular/lib/testing:test_with_message_loop",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
    "//third_party/gtest",
  ]
}
