{
  "$schema": "http://json-schema.org/schema#",
  "title": "Schema for `verb_template` metadata file",
  "definitions": {
    "verbTemplate": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/alphaNumString" },
        "nouns": {
          "type": "array",
          "items": { "$ref": "#/definitions/noun" },
          "uniqueItems": true,
          "additionalItems": false
        },
        "return": {
          "type": "array",
          "items": { "$ref": "#/definitions/return" }
          "uniqueItems": true,
          "additionalItems": false
        }
        "doc": {
          "type": "string"
        }
      },
      "required": [ "name", "nouns", "doc" ],
      "additionalProperties": false
    },
    "noun": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/alphaNumString" },
        "required": {
          "type": "boolean",
          "default": false
        }
      },
      "required": [ "name" ],
      "additionalProperties": false
    },
    "return": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/alphaNumString" }
      },
      "required": [ "name" ],
      "additionalProperties": false
    },
    "alphaNumString": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_]+$"
    }
  },
  "type": "array",
  "minItems": 1,
  "uniqueItems": true,
  "additionalItems": false,
  "items": {
    "$ref": "#/definitions/verbTemplate"
  }
}
