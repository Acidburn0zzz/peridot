visibility = [
  "//apps/ledger/src/*",
  "//apps/ledger/cloud_provider_firebase/*",
]

source_set("callback") {
  sources = [
    "auto_cleanable.h",
    "cancellable.cc",
    "cancellable.h",
    "cancellable_helper.cc",
    "cancellable_helper.h",
    "capture.h",
    "destruction_sentinel.cc",
    "destruction_sentinel.h",
    "operation_serializer.h",
    "pending_operation.cc",
    "pending_operation.h",
    "scoped_callback.h",
    "scoped_task_runner.cc",
    "scoped_task_runner.h",
    "synchronous_task.cc",
    "synchronous_task.h",
    "trace_callback.h",
    "waiter.h",
  ]

  public_deps = [
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/fsl",
    "//zircon/system/ulib/trace",
  ]

  configs += [ "//apps/ledger/src:ledger_config" ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "auto_cleanable_unittest.cc",
    "cancellable_helper_unittest.cc",
    "cancellable_unittest.cc",
    "capture_unittest.cc",
    "destruction_sentinel_unittest.cc",
    "pending_operation_unittest.cc",
    "scoped_callback_unittest.cc",
    "scoped_task_runner_unittest.cc",
    "synchronous_task_unittest.cc",
    "waiter_unittest.cc",
  ]

  deps = [
    ":callback",
    "//apps/ledger/src/test:lib",
    "//third_party/gtest",
  ]

  configs += [ "//apps/ledger/src:ledger_config" ]
}
