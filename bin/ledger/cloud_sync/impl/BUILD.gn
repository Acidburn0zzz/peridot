visibility = [ "//peridot/bin/ledger/*" ]

source_set("impl") {
  sources = [
    "aggregator.cc",
    "aggregator.h",
    "base_coordinator_delegate.h",
    "batch_download.cc",
    "batch_download.h",
    "batch_upload.cc",
    "batch_upload.h",
    "constants.h",
    "ledger_sync_impl.cc",
    "ledger_sync_impl.h",
    "page_download.cc",
    "page_download.h",
    "page_sync_impl.cc",
    "page_sync_impl.h",
    "page_upload.cc",
    "page_upload.h",
    "user_sync_impl.cc",
    "user_sync_impl.h",
  ]

  public_deps = [
    "//peridot/bin/ledger/backoff",
    "//peridot/bin/ledger/cloud_provider/impl",
    "//peridot/bin/ledger/cloud_provider/public",
    "//peridot/bin/ledger/cloud_sync/public",
    "//peridot/bin/ledger/device_set",
    "//peridot/bin/ledger/encryption/impl",
    "//peridot/bin/ledger/encryption/public",
    "//peridot/bin/ledger/environment",
    "//peridot/bin/ledger/firebase",
    "//peridot/bin/ledger/storage/public",
  ]

  deps = [
    "//garnet/public/lib/fsl",
    "//zircon/system/ulib/trace",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "aggregator_unittest.cc",
    "batch_download_unittest.cc",
    "batch_upload_unittest.cc",
    "page_download_unittest.cc",
    "page_sync_impl_unittest.cc",
    "page_upload_unittest.cc",
    "user_sync_impl_unittest.cc",
  ]

  deps = [
    ":impl",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//peridot/bin/ledger/auth_provider/test",
    "//peridot/bin/ledger/backoff/test",
    "//peridot/bin/ledger/cloud_provider/test",
    "//peridot/bin/ledger/cloud_sync/impl/test",
    "//peridot/bin/ledger/cloud_sync/test",
    "//peridot/bin/ledger/device_set",
    "//peridot/bin/ledger/device_set/test",
    "//peridot/bin/ledger/encryption/fake",
    "//peridot/bin/ledger/network:fake",
    "//peridot/bin/ledger/storage/public",
    "//peridot/bin/ledger/storage/test",
    "//peridot/bin/ledger/test:lib",
    "//third_party/gtest",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
