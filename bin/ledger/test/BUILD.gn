visibility = [
  "//peridot/bin/cloud_provider_firebase/*",
  "//peridot/bin/cloud_provider_firestore/*",
  "//peridot/bin/ledger/*",

  # TODO(ppi): clean up deps, see LE-366.
  "//peridot/lib/callback/*",
  "//peridot/lib/network/*",
]

source_set("lib") {
  testonly = true

  sources = [
    "cloud_provider_firebase_factory.cc",
    "cloud_provider_firebase_factory.h",
    "data_generator.cc",
    "data_generator.h",
    "fake_token_provider.cc",
    "fake_token_provider.h",
    "get_ledger.cc",
    "get_ledger.h",
    "test_with_coroutines.cc",
    "test_with_coroutines.h",
    "test_with_message_loop.cc",
    "test_with_message_loop.h",
  ]

  public_deps = [
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fidl/cpp/bindings:serialization",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//peridot/bin/cloud_provider_firebase/fidl",
    "//peridot/bin/ledger/fidl_helpers",
    "//peridot/public/lib/auth/fidl",
    "//peridot/public/lib/cloud_provider/fidl",
    "//peridot/public/lib/ledger/fidl",
    "//third_party/gtest",
  ]

  deps = [
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//peridot/bin/cloud_provider_firebase/fidl",
    "//peridot/bin/ledger/convert",
    "//peridot/bin/ledger/coroutine",
    "//peridot/bin/ledger/fidl",
    "//peridot/lib/callback",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}

source_set("app_test") {
  testonly = true

  sources = [
    "app_test.cc",
    "app_test.h",
  ]

  public_deps = [
    ":lib",
    "//garnet/public/lib/app/cpp",
  ]

  deps = [
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/test_runner/cpp/reporting",
    "//third_party/gtest",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}

source_set("app_test_main") {
  testonly = true

  sources = [
    "app_test_main.cc",
  ]

  deps = [
    ":app_test",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "test_with_message_loop_unittest.cc",
  ]

  deps = [
    ":lib",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}

source_set("ledger_instance_factory") {
  testonly = true

  sources = [
    "ledger_app_instance_factory.cc",
    "ledger_app_instance_factory.h",
  ]

  public_deps = [
    ":lib",
    "//garnet/public/lib/fxl",
    "//peridot/bin/ledger/fidl",
    "//peridot/bin/ledger/fidl_helpers",
    "//peridot/public/lib/ledger/fidl",
  ]

  deps = [
    "//peridot/bin/ledger/convert",
    "//peridot/lib/callback",
    "//third_party/gtest",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
