visibility = [ "//peridot/bin/ledger/*" ]

executable("integration") {
  output_name = "ledger_integration_tests"

  testonly = true

  sources = [
    "integration_test.cc",
    "integration_test.h",
    "integration_test_tests.cc",
    "ledger_app_instance_factory_integration.cc",
    "ledger_repository_tests.cc",
    "merging_tests.cc",
    "page_snapshot_tests.cc",
    "page_tests.cc",
    "page_watcher_tests.cc",
    "sync_tests.cc",
    "test_utils.cc",
    "test_utils.h",
  ]

  deps = [
    "//garnet/public/lib/fidl/cpp/bindings",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/test_runner/cpp:gtest_main",
    "//peridot/bin/ledger/app:lib",
    "//peridot/bin/ledger/callback",
    "//peridot/bin/ledger/convert",
    "//peridot/bin/ledger/fidl",
    "//peridot/bin/ledger/glue/socket",
    "//peridot/bin/ledger/network:fake",
    "//peridot/bin/ledger/storage/fake:lib",
    "//peridot/bin/ledger/storage/public",
    "//peridot/bin/ledger/test:ledger_instance_factory",
    "//peridot/bin/ledger/test:lib",
    "//peridot/bin/ledger/test/cloud_server",
    "//peridot/bin/ledger/test/integration/sync",
    "//peridot/public/lib/auth/fidl",
    "//peridot/public/lib/ledger/fidl",
    "//third_party/gtest",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
