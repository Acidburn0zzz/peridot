visibility = [ "//peridot/bin/ledger/*" ]

source_set("cloud_server") {
  testonly = true

  sources = [
    "fake_cloud_network_service.cc",
    "fake_cloud_network_service.h",
    "fake_cloud_url_loader.cc",
    "fake_cloud_url_loader.h",
    "firebase_server.cc",
    "firebase_server.h",
    "gcs_server.cc",
    "gcs_server.h",
    "server.cc",
    "server.h",
  ]

  public_deps = [
    "//peridot/bin/ledger/glue/socket",
    "//garnet/public/lib/network/fidl",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/netstack/fidl:net_address",
  ]

  deps = [
    "//peridot/bin/ledger/convert",
    "//garnet/public/lib/url",
    "//third_party/rapidjson",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
