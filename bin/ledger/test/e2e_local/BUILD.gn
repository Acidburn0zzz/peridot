visibility = [ "//peridot/bin/ledger/*" ]

executable("e2e_local") {
  output_name = "ledger_e2e_local"

  testonly = true

  sources = [
    "ledger_apptest.cc",
  ]

  deps = [
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fidl/cpp/bindings",
    "//garnet/public/lib/fsl",
    "//peridot/bin/ledger/fidl",
    "//peridot/bin/ledger/fidl:fidl_sync",
    "//peridot/bin/ledger/test:app_test",
    "//peridot/bin/ledger/test:app_test_main",
    "//peridot/bin/ledger/test:lib",
    "//peridot/public/lib/ledger/fidl:fidl_sync",
    "//third_party/gtest",
  ]

  data_deps = [
    "//peridot/bin/ledger/app",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
