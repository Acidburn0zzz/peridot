import("//third_party/flatbuffers/flatbuffer.gni")

visibility = [
  "//peridot/bin/cloud_provider_firebase/*",
  "//peridot/bin/ledger/*",
]

source_set("convert") {
  sources = [
    "convert.cc",
    "convert.h",
  ]

  deps = [
    "//garnet/public/lib/fidl/cpp/bindings",
  ]

  public_deps = [
    ":byte_storage",
    "//garnet/public/lib/fxl",
    "//zircon/system/ulib/zx",
    "//third_party/leveldb",
    "//third_party/rapidjson",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}

flatbuffer("byte_storage") {
  sources = [
    "bytes.fbs",
  ]

  extra_configs = [ "//peridot/bin/ledger:ledger_config" ]
}

flatbuffer("byte_storage_test") {
  testonly = true

  sources = [
    "bytes_test.fbs",
  ]

  deps = [
    ":byte_storage",
  ]

  extra_configs = [ "//peridot/bin/ledger:ledger_config" ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "collection_view_unittest.cc",
    "convert_unittest.cc",
  ]

  deps = [
    ":byte_storage_test",
    ":convert",
    "//third_party/gtest",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
