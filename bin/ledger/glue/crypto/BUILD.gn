visibility = [
  "//peridot/bin/cloud_provider_firebase/*",
  "//peridot/bin/ledger/*",
]

source_set("crypto") {
  sources = [
    "hash.cc",
    "hash.h",
    "hmac.cc",
    "hmac.h",
    "kdf.cc",
    "kdf.h",
    "rand.cc",
    "rand.h",
  ]

  deps = [
    "//garnet/public/lib/fxl",
    "//peridot/third_party/modp_b64",
    "//third_party/boringssl",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
