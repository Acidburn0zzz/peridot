visibility = [ "//peridot/bin/ledger/*" ]

source_set("gcs") {
  sources = [
    "cloud_storage.h",
    "cloud_storage_impl.cc",
    "cloud_storage_impl.h",
    "status.cc",
    "status.h",
  ]

  deps = [
    "//garnet/public/lib/fsl",
  ]

  public_deps = [
    "//peridot/bin/ledger/callback",
    "//peridot/bin/ledger/glue/socket",
    "//peridot/bin/ledger/network",
    "//garnet/public/lib/fxl",
    "//zircon/system/ulib/zx",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "cloud_storage_impl_unittest.cc",
  ]

  deps = [
    ":gcs",
    "//peridot/bin/ledger/network:fake",
    "//peridot/bin/ledger/test:lib",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/fsl",
    "//third_party/gtest",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
