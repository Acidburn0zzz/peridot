import("//packages/package.gni")

package("action_log") {
  system_image = true

  deps = [
    ":bin",
  ]

  binaries = [
    {
      name = "action_log"
    },
  ]
}

executable("bin") {
  output_name = "action_log"

  sources = [
    "action_log_data.cc",
    "action_log_data.h",
    "action_log_impl.cc",
    "action_log_impl.h",
    "action_log_main.cc",
  ]

  deps = [
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//peridot/public/lib/action_log/fidl",
    "//peridot/public/lib/suggestion/fidl",
    "//peridot/public/lib/surface/fidl",
    "//peridot/public/lib/user_intelligence/fidl:scope",
    "//third_party/rapidjson",
  ]
}
