[DartPackage="cloud_provider_firebase"]
module cloud_provider_firebase;

import "apps/ledger/services/public/ledger.fidl";
import "apps/ledger/services/cloud_provider/cloud_provider.fidl";
import "apps/modular/services/auth/token_provider.fidl";

// Configuration to use when connecting to the Firebase server.
struct Config {
  // ID of the Firebase instance.
  string server_id;

  // API key to use when connecting to Firebase.
  string api_key;
};

[ServiceName="cloud_provider_firebase::Factory"]
interface Factory {
  // Creates a cloud provider instance using the given |config|.
  //
  // Parameters:
  // |config| configuration
  // |token_provider| is used to get the appropriate auth tokens
  //     associated with user for whom the cloud provider is running.
  GetCloudProvider(
                Config config,
                modular.auth.TokenProvider token_provider,
                cloud_provider.CloudProvider& cloud_provider)
      => (cloud_provider.Status status);
};
