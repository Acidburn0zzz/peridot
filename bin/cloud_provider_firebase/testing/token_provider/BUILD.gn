visibility = [
  "//peridot/bin/cloud_provider_firebase/*",
  "//peridot/bin/ledger/*",
]

source_set("token_provider") {
  testonly = true

  sources = [
    "service_account_token_provider.cc",
    "service_account_token_provider.h",
  ]

  public_deps = [
    "//garnet/public/lib/fxl",
    "//peridot/lib/callback",
    "//peridot/lib/network",
    "//peridot/public/lib/auth/fidl",
  ]

  deps = [
    "//garnet/public/lib/fsl",
    "//peridot/lib/base64url",
    "//peridot/lib/convert",
    "//third_party/boringssl",
    "//third_party/rapidjson",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "service_account_token_provider_unittest.cc",
  ]

  deps = [
    ":token_provider",
    "//peridot/bin/ledger/testing:lib",
    "//peridot/lib/network:fake",
    "//third_party/gtest",
    "//third_party/rapidjson",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
