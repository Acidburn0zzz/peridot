import("//packages/package.gni")

visibility = [ "//peridot/*" ]

package("cloud_provider_firebase") {
  system_image = true

  deps = [
    "app",
  ]

  binaries = [
    {
      name = "cloud_provider_firebase"
    },
  ]
}

executable("cloud_provider_firebase_unittests") {
  testonly = true

  deps = [
    "//peridot/bin/cloud_provider_firebase/app:unittests",
    "//peridot/bin/cloud_provider_firebase/auth_provider:unittests",
    "//peridot/bin/cloud_provider_firebase/device_set:unittests",
    "//peridot/bin/cloud_provider_firebase/firebase:unittests",
    "//peridot/bin/cloud_provider_firebase/gcs:unittests",
    "//peridot/bin/cloud_provider_firebase/network:unittests",
    "//peridot/bin/cloud_provider_firebase/page_handler/impl:unittests",
    "//peridot/bin/cloud_provider_firebase/test/token_provider:unittests",
  ]
}

group("tests") {
  testonly = true

  public_deps = [
    ":cloud_provider_firebase_unittests",
    "//peridot/bin/cloud_provider_firebase/test/server",
    "//peridot/bin/cloud_provider_firebase/test/token_provider",
  ]
}
