visibility = [ "//peridot/*" ]

executable("cloud_provider_firebase") {
  sources = [
    "app.cc",
  ]

  deps = [
    ":lib",
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fidl/cpp/bindings",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//peridot/public/lib/lifecycle/fidl",
    "//zircon/system/ulib/trace-provider",
  ]
}

source_set("lib") {
  sources = [
    "cloud_provider_impl.cc",
    "cloud_provider_impl.h",
    "convert_status.cc",
    "convert_status.h",
    "device_set_impl.cc",
    "device_set_impl.h",
    "factory_impl.cc",
    "factory_impl.h",
    "page_cloud_impl.cc",
    "page_cloud_impl.h",
  ]

  public_deps = [
    "//garnet/public/lib/fidl/cpp/bindings",
    "//garnet/public/lib/fxl",
    "//peridot/bin/cloud_provider_firebase/fidl",
    "//peridot/bin/ledger/auth_provider",
    "//peridot/bin/ledger/cloud_provider",
    "//peridot/bin/ledger/device_set",
    "//peridot/public/lib/auth/fidl",
    "//peridot/public/lib/cloud_provider/fidl",
  ]

  deps = [
    "//peridot/bin/ledger/backoff",
    "//peridot/bin/ledger/callback",
    "//peridot/bin/ledger/convert",
  ]
}

executable("cloud_provider_firebase_unittests") {
  testonly = true

  sources = [
    "cloud_provider_impl_unittest.cc",
    "device_set_impl_unittest.cc",
    "factory_impl_unittest.cc",
    "page_cloud_impl_unittest.cc",
  ]

  deps = [
    ":lib",
    "//garnet/public/lib/fidl/cpp/bindings",
    "//garnet/public/lib/fxl:fxl_printers",
    "//garnet/public/lib/test_runner/cpp:gtest_main",
    "//peridot/bin/cloud_provider_firebase/fidl",
    "//peridot/bin/ledger/auth_provider/test",
    "//peridot/bin/ledger/cloud_provider/test",
    "//peridot/bin/ledger/device_set/test",
    "//peridot/bin/ledger/network:fake",
    "//peridot/bin/ledger/test:lib",
    "//peridot/public/lib/auth/fidl",
    "//peridot/public/lib/cloud_provider/fidl",
  ]
}

group("tests") {
  testonly = true

  public_deps = [
    ":cloud_provider_firebase_unittests",
  ]
}
